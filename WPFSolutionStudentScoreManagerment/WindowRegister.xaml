<Window x:Class="WPFSolutionStudentScoreManagerment.WindowRegister"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSolutionStudentScoreManagerment"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="WindowRegister" Height="450" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Register Account" FontWeight="Bold" FontSize="18" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Label Content="Email:" />
            <TextBox x:Name="txt_Email" Width="300" Margin="0,0,0,10"/>

            <Label Content="Mật khẩu:" />
            <PasswordBox x:Name="txt_Password" Width="300" Margin="0,0,0,10"/>

            <Label Content="Giới tính:" />
            <TextBox x:Name="txt_Gender" Width="300" Margin="0,0,0,10"/>

            <Label Content="Mã sinh viên:" />
            <TextBox x:Name="txt_Masv" Width="300" Margin="0,0,0,10"/>
            <Button x:Name="btn_Register" Content="Đăng ký" Click="btn_Register_Click" Width="100"/>
            <Button x:Name="btn_Login" Content="Login" Width="100" Margin="0,20,0,10" Click="btn_Login_Click"/>
        </StackPanel>
    </Grid>
</Window>
